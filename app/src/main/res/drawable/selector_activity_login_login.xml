<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/dimen_0.5" android:color="@color/button_pressed_color" />
            <corners android:radius="@dimen/dimen_5" />
            <solid android:color="@color/button_pressed_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/dimen_0.5" android:color="@color/color_theme" />
            <corners android:radius="@dimen/dimen_5" />
            <solid android:color="@color/color_theme" />
        </shape>
    </item>
</selector>