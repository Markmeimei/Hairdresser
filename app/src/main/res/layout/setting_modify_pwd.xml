<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">
    <com.eron.hairdresser.views.headTitle.HeadTitle
        xmlns:title="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_new_user_HeadTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        title:imgLeft="@mipmap/head_title_return"
        title:titleCenter="@string/setting_feedback_title"
        title:titleLeft="@string/head_title_return" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_bg"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp">
        <EditText
            android:id="@+id/old_pwd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="原密码"
            android:padding="15dp"
            android:inputType="textPassword"
            android:maxLength="16"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:background="@color/line_color"/>
        <EditText
            android:id="@+id/new_pwd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="新密码"
            android:padding="15dp"
            android:inputType="textPassword"
            android:maxLength="16"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:background="@color/line_color"/>
        <EditText
            android:id="@+id/affirm_pwd"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="确认密码"
            android:padding="15dp"
            android:inputType="textPassword"
            android:maxLength="16"/>
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="密码重置连接将发送到您的注册邮箱"
        android:textSize="13dp"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"/>
    <Button
        android:id="@+id/modify_complete"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_bg"
        android:text="修改密码"
        android:textColor="@color/text_content"
        android:textSize="20dp"
        android:layout_margin="20dp"/>
</LinearLayout>