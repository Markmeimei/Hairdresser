<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adapter_product_activity_listview_ImgaeView"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_10">

            <TextView
                android:id="@+id/adapter_product_activity_listview_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:padding="@dimen/dimen_5"
                android:singleLine="true"
                android:text="产品名称"
                android:textColor="@color/text_color1"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0.5"
                android:background="@color/line_color" />

            <TextView
                android:id="@+id/adapter_product_activity_listview_Type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/adapter_product_activity_listview_type"
                android:drawablePadding="@dimen/dimen_15"
                android:padding="@dimen/dimen_5"
                android:text="类型    热烫"
                android:textColor="@color/text_color1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/adapter_product_activity_listview_Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/adapter_product_activity_listview_price"
                android:drawablePadding="@dimen/dimen_15"
                android:padding="@dimen/dimen_5"
                android:text="价格    1286元"
                android:textColor="@color/color_theme"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>