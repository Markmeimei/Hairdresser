<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_200"
        android:background="@mipmap/img_fragment_hairdresser_background"
        android:orientation="vertical">

        <com.eron.hairdresser.views.headTitle.HeadTitle xmlns:title="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fragment_hairdresser_HeadTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            title:imgRight="@mipmap/img_fragment_hairdresser_setting"
            title:themeColor="@color/transparency" />

        <ImageView
            android:id="@+id/fragment_hairdresser_Avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/fragment_hairdresser_Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="设计师 赵小刚"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/fragment_hairdresser_ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/white" />
</LinearLayout>
