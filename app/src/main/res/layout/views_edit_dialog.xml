<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/views_edit_dialog_Title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45"
            android:background="@drawable/selector_views_edit_dialog_title"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:minHeight="@dimen/dimen_100"
            android:minWidth="@dimen/dimen_200"
            android:orientation="vertical">

            <EditText
                android:id="@+id/views_edit_dialog_Message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dimen_10"
                android:background="@drawable/selector_views_edit_dialog_message"
                android:gravity="left"
                android:minHeight="@dimen/dimen_80"
                android:padding="@dimen/dimen_10"
                android:text="内容"
                android:textColor="@color/text_color"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/views_edit_dialog_Positive"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_45"
            android:layout_weight="1"
            android:background="@drawable/selector_views_edit_dialog_positive"
            android:text="取消"
            android:textColor="@color/blue"
            android:textSize="16sp" />

        <View
            android:layout_width="@dimen/dimen_0.5"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <Button
            android:id="@+id/views_edit_dialog_Negative"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_45"
            android:layout_weight="1"
            android:background="@drawable/selector_views_edit_dialog_negative"
            android:text="确定"
            android:textColor="@color/blue"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>